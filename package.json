{
	"name": "tauri-react-app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"tauri": "tauri",
		"format": "biome format --write .",
		"check": "biome check --apply ./src",
		"lint": "biome lint --apply ./src",
		"up": "taze major -I",
		"postinstall": "npx simple-git-hooks"
	},
	"dependencies": {
		"@ant-design/icons": "^5.2.6",
		"@tauri-apps/api": "^1.5.1",
		"ahooks": "^3.7.8",
		"antd": "^5.11.2",
		"localforage": "^1.10.0",
		"match-sorter": "^6.3.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.19.0",
		"sort-by": "^1.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.3.3",
		"@tauri-apps/cli": "^1.5.6",
		"@types/react": "^18.2.37",
		"@types/react-dom": "^18.2.15",
		"@unocss/transformer-directives": "^0.57.5",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"lint-staged": "^15.1.0",
		"sass": "^1.69.5",
		"simple-git-hooks": "^2.9.0",
		"taze": "^0.12.0",
		"typescript": "^5.2.2",
		"unocss": "^0.57.5",
		"vite": "^5.0.0"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "biome format --write ."
	}
}
